            <li class="active"><a href="/signup">Signup</a></li>
            </ul>
        </div>
        
        <div id="signup">
            <div class="heading">
                <span>Signup. It's Free!</span>
            </div>
            
            <form name="signup" method="post">
                <input type="text" class="input" id="username" name="username" placeholder="Enter username">
                <input type="text" class="input" id="email" name="email" placeholder="Enter email">
                <input type="password" class="input" id="pass" name="password" placeholder="Enter password">
                <input type="password" class="input" id="cpass" name="cpassword" placeholder="Confirm password">
                <center>  <input type="submit" class="submitbtn" value="Signup"> </center>
            </form>
        </div>

</body>
