<script type="text/javascript">
function bgop()
{
 document.body.style.opacity ="1";

	 document.body.style.transition="all 1s";
}

</script>
<body onload="bgop();">
        
        <div class="logo">
        <center><a href="/"><img src="img/logo.png"> </a>
        </div>
    
        <div class="nav">
            <ul>
            <li ><a href="/">Home</a></li>
            <li><a href="/#features1">Features</a></li>
